<div class = "container">
<h1 class = "text-center">Burgers!</h1>
<br>
  <div class = "row">
    <div id = "eatMe" class = "col-md-4">
      <h2>Burgers I Want to Eat!</h2>
      <br>
      <ul class = "burgerB4 d-flex align-items-center">
        {{#each burgers}}
          {{#unless devoured}}
            {{> burgers/burger-block devoured=true}}
          {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div id = "newBurger" class = "col-md-4">
      <h2 class = "text-center" >Add a burger</h2>
        <form class="create-form">

          <div class="form-group">
            <label for="ca">Burger Name:</label>
            <input type="text" id="ca" name="name">
          </div>

          <div class="form-group">
            <label for="devoured">Devoured?</label><br>
            <input type="radio" name="devoured" value="0" checked> Wanna Eat It!<br>
            <input type="radio" name="devoured" value="1"> Already Ate It!
          </div>

          <button type="submit">Add Burger</button>
        </form>
    </div>
    <div id = "soGood" class = "col-md-4">
      <h2 class = "text-center" >Burgers That I Ate!</h2>
      <br>
        <ul class = "burgerAfter">
          {{#each burgers}}
            {{#if devoured}}
              {{> burgers/burger-block devoured=false}}
            {{/if}}
          {{/each}}
        </ul>
    </div>
  </div>
</div>